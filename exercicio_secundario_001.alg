algoritmo "Decobrindo idades"

var
     ano: inteiro
     nascimento: inteiro
     idade: inteiro
inicio

      escreva("Em que ano estamos? ")
      leia(ano)
      escreva("Em que ano a pessoa nasceu? ")
      leia(nascimento)
      
      idade <- ano - nascimento
      
      escreva("A idade da pessoa é: ", idade)

fimalgoritmo
