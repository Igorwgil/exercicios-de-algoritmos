algoritmo "Par ou Ímpar"
var
    n: inteiro
inicio
      escreva("Digite um número do conjunto dos Inteiros: ")
      leia(n)
      
      se ((n % 2) = 0) entao
         escreval(n, " é um número par")
      senao
         escreval(n, " é um número Ímpar")
      fimse
      escreval()
fimalgoritmo
